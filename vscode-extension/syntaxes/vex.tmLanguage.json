{
  "scopeName": "source.vexlanguage",
  "patterns": [
    {
      "name": "comment.line.double-slash.vl",
      "match": "//.*$"
    },
    {
      "name": "comment.block.vl",
      "begin": "/\\*",
      "end": "\\*/"
    },
    {
      "name": "keyword.control.vl",
      "match": "\\b(if|else|for|while|return|break|continue)\\b"
    },
    {
      "name": "storage.type.vl",
      "match": "\\b(let|const|fn|struct)\\b"
    },
    {
      "name": "constant.language.vl",
      "match": "\\b(true|false|null)\\b"
    },
    {
      "name": "string.quoted.double.vl",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "number.vl",
      "match": "\\b\\d+(?:\\.\\d+)?\\b"
    }
  ]
}